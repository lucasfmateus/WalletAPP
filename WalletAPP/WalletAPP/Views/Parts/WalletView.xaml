                                    </StackLayout>

                                </Grid>

                            </Grid>

                        </Frame>

                    </Grid>

                    <Grid
                                    Padding="16"
                                    >

                        <buttons:SfSegmentedControl 
                                        x:Name="walletFilter"
                                        CornerRadius="10"
                                        VisibleSegmentsCount="3"
                                        SelectedIndex="1"
                                        FontSize="15"
                                        FontColor="{DynamicResource PrimaryColor}"
                                        FontFamily="{StaticResource MetropolisFontBold}"
                                        >

                            <buttons:SfSegmentedControl.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Saida</x:String>
                                    <x:String>Tudo</x:String>
                                    <x:String>Entrada</x:String>
                                </x:Array>
                            </buttons:SfSegmentedControl.ItemsSource>

                        </buttons:SfSegmentedControl>

                    </Grid>

                </StackLayout>--><!--

              

            </Grid>-->
            
        </Grid>
  
    </ContentView.Content>
    
</ContentView>