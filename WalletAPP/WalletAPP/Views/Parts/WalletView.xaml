                                        Padding="0"
                                        >

                            <Grid
                                            RowSpacing="0"
                                            >

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackLayout
                                                Grid.Row="0"
                                                Padding="16"
                                                VerticalOptions="Start"
                                                >

                                    <Label
                                                    TextColor="{DynamicResource TextColorOfPrimaryColor}"
