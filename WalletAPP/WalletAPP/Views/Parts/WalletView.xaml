                                                    HorizontalOptions="Start"
                                                    VerticalOptions="Center"
                                                    />


                                </StackLayout>

                                <Grid
                                                Grid.Row="1"
                                                BackgroundColor="{DynamicResource BackgroundColorAppBar}"
                                                Padding="16"
